/*
Settings file for Visual Studio Code (VSC in short). This file is project-specific, meaning that there can only be one file per project.
Usage: Just clone the repo as usual from within VSC. Settings should be applied automatically. In case this does not happen, just restart VSC.

License: GPL v2.
*/
{
    // Editor related settings
    "editor.cursorStyle": "line-thin",
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 60,
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.minimap.enabled": false,
    "editor.minimap.showSlider": "mouseover",
    "editor.suggest.maxVisibleSuggestions": 6,
    "editor.suggest.showSnippets": true,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.autoClosingBrackets": "always",
    "editor.autoClosingQuotes": "always",
    "editor.letterSpacing": 0,
    "editor.lightbulb.enabled": true,
    "editor.fontSize": 12,
    "editor.fontFamily": "Monaco, monospace",
    "workbench.fontAliasing": "auto",
    "workbench.statusBar.visible": true,
    "workbench.editor.closeOnFileDelete": true,
    "workbench.editor.closeEmptyGroups": true,
    "workbench.editor.enablePreview": true,

    // Markdown related settings
    "[markdown]": {

        "editor.highlightActiveIndentGuide": true
    },
    "markdownlint.config": {
    "MD036": false,
    "MD041": false,
    "MD032": false,
    "MD022": false,
    "MD031": false,
    "MD033": false,
    "MD012": false,
    "MD047": false,
    "MD007": false,
    "MD004": false
    },
}