{
    // Documet version
    "version": "2.0.0",

    // Tasks definition
    "tasks": [
    
        // Task 1
        {
            "label": "TestTask_1",
            "type": "shell",
            "command": "echo Hello world",
            "problemMatcher": [
                "$gcc",
                "$jshint"
            ],
            "dependsOn":{
                "type": "${workspaceFolder}",
                "$jshint": "/tar/jshint/core"
            }
        },
    
        // Task 2
        {
            "label": "Build",
            "type": "shell",
            "command": "gcc -RPX --flags-app=${flags} --source-map=/rca",
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn":[
                {
                    "type": "${defaultBuildTask}",
                    "$gcc": "10.2"
                }
            ]
        }
    ],
    
    // Options
    "options": {
        "shell": {
            "executable": "/bin/bash"
        },
        "env": {
            "$gcc": "10.2",
            "$jshint": "${workspaceFolder}",
            "Build": "${defaultBuildTask}"
        }
    }
}